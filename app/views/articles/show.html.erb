<div class="row">
  <div class="col-lg-8 offset-lg-2">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h1 class="card-title mb-0"><%= @article.title %></h1>
        <div class="article-author-header mt-2">
          <small class="text-light">
            <i class="fas fa-user"></i> Par <%= getUserName(@article.user_id) %>
          </small>
        </div>
      </div>
      <div class="card-body">
        <div class="article-content">
          <%= simple_format(@article.content) %>
        </div>
      </div>
      <div class="card-footer bg-light">
        <div class="d-flex gap-2 flex-wrap">
          <%= link_to "Éditer cet article", edit_article_path(@article), class: "btn btn-warning" if current_user %>
          <%= link_to "Retour aux articles", articles_path, class: "btn btn-secondary" %>
          <%= button_to "Supprimer cet article", @article, method: :delete, 
                        confirm: "Êtes-vous sûr de vouloir supprimer cet article ?",
                        class: "btn btn-danger" if current_user %>

        </div>
      </div>
    </div>
  </div>
</div>