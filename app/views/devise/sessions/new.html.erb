<% content_for :title, "Connexion" %>

<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-lg border-0">
      <div class="card-header bg-primary text-white text-center">
        <h2 class="card-title mb-0">
          <i class="fas fa-sign-in-alt me-2"></i>
          Connexion
        </h2>
      </div>

      <div class="card-body p-5">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, class: "needs-validation", novalidate: true) do |f| %>

        <div class="mb-4">
          <%= f.label :email, "Adresse e-mail", class: "form-label fw-bold" %>
          <%= f.email_field :email, 
                              autofocus: true, 
                              autocomplete: "email",
                              class: "form-control form-control-lg",
                              placeholder: "votre@email.com",
                              required: true %>
          <div class="invalid-feedback">
            Veuillez saisir une adresse e-mail valide.
          </div>
        </div>

        <div class="mb-4">
          <%= f.label :password, "Mot de passe", class: "form-label fw-bold" %>
          <%= f.password_field :password, 
                                autocomplete: "current-password",
                                class: "form-control form-control-lg",
                                placeholder: "Votre mot de passe",
                                required: true %>
          <div class="invalid-feedback">
            Le mot de passe est requis.
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <div class="form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
          </div>
        </div>
        <% end %>

        <div class="d-grid mb-4">
          <%= f.submit "Se connecter", class: "btn btn-primary btn-lg" %>
        </div>
        <% end %>

        <hr class="my-4">

        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>